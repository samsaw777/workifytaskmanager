generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  profile   String
  password  String
  project Project[]
  issues Issues[]
  tasks Task[]
}

model Project{
  id Int @id @default(autoincrement())
  isKanban Boolean
  isScrum Boolean
  isBug Boolean
  createdAt DateTime @default(now())
  name String @unique
  userId String
  isPrivate Boolean
  User User @relation(fields: [userId], references: [id],onDelete: Cascade)
  members Members[]
  board Board[]
}

model Members{
  id Int @id @default(autoincrement())
  email String 
  userId String
  profileImage String
  role String
  projectId Int
  Project Project @relation(fields: [projectId], references: [id],onDelete: Cascade)
}

model Issues{
  id Int @id @default(autoincrement())
  type String
  issue String
  projectId Int
  username String
  profile String
  userId String
  position Int
  sectionId Int
  sectionName String
  sprintId Int
  sprintName String
  isUnderStartSprint Boolean
  Sprint Sprint @relation(fields: [sprintId], references:[id], onDelete: Cascade)
  Section Section @relation(fields: [sectionId], references: [id],onDelete: Cascade)
  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model Board{
    id Int   @id @default(autoincrement())
    type String
    projectId Int
    Project Project @relation(fields: [projectId], references: [id],onDelete: Cascade)
    sections Section[]
    sprints Sprint[]
}

model Section{
  id Int @id @default(autoincrement())
  title String
  boardId Int
  Board Board @relation(fields: [boardId], references: [id],onDelete: Cascade)
  issues Issues[]
  tasks Task[]
}

model Sprint{
  id Int @id @default(autoincrement())
  sprintName String @unique
  boardId Int
  isUnderStartSprint Boolean
  isPrimary Boolean
  Board Board @relation(fields: [boardId], references: [id],onDelete: Cascade)
  issues Issues[]
}

model Task{
  id String @id @default(uuid())
  title String
  description String?
  username String
  profile String
    userId String
  position Int
  sectionId Int
  Section Section @relation(fields: [sectionId], references: [id],onDelete: Cascade)
  comments TaskComments[]
  User User @relation(fields: [userId], references: [id], onDelete: Cascade)

  labels TaskLabels[]
}

model TaskComments{
  id Int @id @default(autoincrement())
  userEmail String?
  userProfile String?
  comment String
  taskId String
  Task Task @relation(fields: [taskId], references: [id],onDelete: Cascade)
}

model TaskLabels{
  id Int @id @default(autoincrement())
  name String
  taskId String
  Task Task @relation(fields: [taskId], references: [id],onDelete: Cascade)
}


