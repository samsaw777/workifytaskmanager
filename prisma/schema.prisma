generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  profile   String
  password  String
  project Project[]
  issues Issues[] @relation("createdBy")
  assignedIssues Issues[] @relation("assignedTo")
  assignedTask Task[] @relation("assignedTo")
  tasks Task[]
}

model Project{
  id Int @id @default(autoincrement())
  isKanban Boolean
  isScrum Boolean
  isBug Boolean
  createdAt DateTime @default(now())
  name String @unique
  userId String
  isPrivate Boolean
  User User @relation(fields: [userId], references: [id],onDelete: Cascade)
  members Members[]
  board Board[]
}

model Members{
  id Int @id @default(autoincrement())
  username String 
  userId String
  profileImage String
  role String
  projectId Int
  Project Project @relation(fields: [projectId], references: [id],onDelete: Cascade)
}

model Issues{
  id Int @id @default(autoincrement())
  type String
  description String
  title String
  projectId Int
  username String
  profile String
  userId String
  position Int
  sectionId Int
  sectionName String
  sprintId Int
  sprintName String
  isUnderStartSprint Boolean
  assignedTo String?
  Sprint Sprint @relation(fields: [sprintId], references:[id], onDelete: Cascade)
  Section Section @relation(fields: [sectionId], references: [id],onDelete: Cascade)
  User User @relation("createdBy",fields: [userId], references: [id], onDelete: Cascade)
  assignedUser User? @relation("assignedTo",fields: [assignedTo], references: [id], onDelete: Cascade)
  comments IssueComments[]
  labels IssueLabels[]
}


model Board{
    id Int   @id @default(autoincrement())
    type String
    projectId Int
    Project Project @relation(fields: [projectId], references: [id],onDelete: Cascade)
    sections Section[]
    sprints Sprint[]
}

model Section{
  id Int @id @default(autoincrement())
  title String
  boardId Int
  Board Board @relation(fields: [boardId], references: [id],onDelete: Cascade)
  issues Issues[]
  tasks Task[]
}

model Sprint{
  id Int @id @default(autoincrement())
  sprintName String 
  boardId Int
  isUnderStartSprint Boolean
  isPrimary Boolean
  Board Board @relation(fields: [boardId], references: [id],onDelete: Cascade)
  issues Issues[]
}

model Task{
  id String @id @default(uuid())
  title String
  description String?
  username String
  profile String
    userId String
  position Int
  sectionId Int
  Section Section @relation(fields: [sectionId], references: [id],onDelete: Cascade)
  comments TaskComments[]
  labels TaskLabels[]
  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedTo String?
  assignedUser User? @relation("assignedTo",fields: [assignedTo], references: [id], onDelete: Cascade)

}

model TaskComments{
  id Int @id @default(autoincrement())
  username String?
  userProfile String?
  comment String
  taskId String
  Task Task @relation(fields: [taskId], references: [id],onDelete: Cascade)
}

model TaskLabels{
  id Int @id @default(autoincrement())
  name String
  taskId String
  Task Task @relation(fields: [taskId], references: [id],onDelete: Cascade)
}
model IssueComments{
  id Int @id @default(autoincrement())
  username String?
  userProfile String?
  comment String
  issueId Int
  Issue Issues @relation(fields: [issueId], references: [id], onDelete: Cascade)
}

model IssueLabels{
  id Int @id @default(autoincrement())
  name String
  issueId Int
  Issue Issues @relation(fields: [issueId], references: [id], onDelete: Cascade)
}


